<% if @budget.errors.any? %>
  <% @budget.errors.full_messages.each do |msg| %>
    <a class="error"><%= msg %></a>
  <% end %>
<% end %>
  <h1>New Budget</h1>
<%= form_for @budget do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :limit %>
  <%= f.number_field :limit %><br>

  <%= f.label :category %>
  <%= f.text_field :category %><br>

  <%= f.label :start %>
  <%= f.date_field :start %><br>

  <%= f.label :end %>
  <%= f.date_field :end %><br>

  <%= f.submit "Create Budget" %>
  <% end %>
