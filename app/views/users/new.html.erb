<h1>Welcome to Personal Budgeter sign up below or sign in.</h1>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p class="error"><%= msg %></p>
  <% end %>
<% end %>

<%= form_with model: @user, local: true do |f| %>
<%= f.label "Name" %>
<%= f.text_field :name %><br>

<%= f.label :username %>
<%= f.text_field :username %><br>

<%= f.label :password %>
<%= f.password_field :password %><br>

<%= f.submit "Create User" %>
<% end %>

<h2><%= link_to('Log in with Facebook', '/auth/facebook') %></h2>
<h2><%= link_to "Sign In", signin_path %><br></h2>
