<% if logged_in? %>
<% if flash[:notice] %>
   <div class="notice"><%= flash[:notice] %></div>
 <% end %>
 
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Users!</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if logged_in? %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to "See User Profile", user %></td>
        <% if current_user %>
        <td><%= link_to "Edit User", edit_user_path(user) %></td>
        <td><%= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add New User", new_user_path %>
<% else %>
You must sign in to continue.
<%= link_to "Signin", signin_path %><br>
<% end %>
<% end %>
